//Problem no. --> 1572. Matrix Diagonal Sum

class Solution {
    public int diagonalSum(int[][] mat) {
    int count = 0;
    int n = mat.length;
        for(int i = 0; i < mat.length; i++){
            count = count + mat[i][i];
            count = count + mat[i][n-1-i];
        }
        if((n % 2) == 1){
            n = n / 2;
            count = count - mat[n][n];
        }
        return count;     
    }
}
